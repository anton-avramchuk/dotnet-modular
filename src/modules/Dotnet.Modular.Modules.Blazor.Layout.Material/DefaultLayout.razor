@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />


<MudLayout>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1" Anchor="Anchor.Start" Variant="DrawerVariant.Mini">
        @* <MainMenu/> *@
    </MudDrawer>

    <MudMainContent>
        <MudAppBar Color="Color.Primary">
            <MudText Typo="Typo.h6">@AppName</MudText>
            <MudSpacer />
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" OnClick="@ToggleDrawer" Edge="Edge.Start" />
        </MudAppBar>

        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>